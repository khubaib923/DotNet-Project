@model IEnumerable<CategoryModel>

<div class="row mt-5">
    <div class="col-6"><h2>Categories</h2></div>
    <div class="col-6">
        <button class="btn btn-primary"><i class="bi bi-plus-circle-fill px-3"></i><a class="text-white" asp-controller="Category" asp-action="Create">Create New Category</a></button>
    </div>

</div>
<table class="table table-dark table-striped table-bordered mt-5">

    <thead class="text-center">
        <tr>
            <th>Name</th>
            <th>DisplayProperty</th>
        </tr>

    </thead>
    <tbody class="text-center">
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.DisplayProperty</td>
            </tr>
        }
       
    </tbody>

</table>

