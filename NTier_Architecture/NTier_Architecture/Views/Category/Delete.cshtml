@model CategoryModel
<div class="container p-5 border mt-4">
    <div>
        <h2>Delete Category</h2>
    </div>
    <form method="post" asp-action="Delete" asp-controller="Category">

        <div class="mt-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" disabled/>
            <span asp-validation-for="Name" class="bg-danger text-primary"></span>
        </div>

        <div class="mt-3">
            <label asp-for="DisplayOrder"></label>
            <input asp-for="DisplayOrder" class="form-control" disabled/>
            <span asp-validation-for="DisplayOrder" class="bg-danger text-primary"></span>
        </div>



        <div class="text-center mt-4">
            <button type="submit" class="btn btn-primary px-5">Delete</button>
        </div>
    </form>
</div>
