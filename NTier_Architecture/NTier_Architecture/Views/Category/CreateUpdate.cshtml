@model CategoryModel
<div class="container p-5 border mt-4">
<div>
    <h2>@((Model==null)?"Create New Category":"Update Category")</h2>
</div>
<form method="post" asp-action="CreateUpdate" asp-controller="Category">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="mt-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="bg-danger text-primary"></span>
    </div>

    <div class="mt-3">
            <label asp-for="DisplayOrder"></label>
            <input asp-for="DisplayOrder" class="form-control" />
            <span asp-validation-for="DisplayOrder" class="bg-danger text-primary"></span>
    </div>



        <div class="text-center mt-4">
            <button type="submit" class="btn btn-primary px-5">@((Model == null) ? "Create" : "Update")</button>
    </div>
</form>
</div>

@section scripts{
    <partial name="_ValidationScriptsPartial"></partial>
}
